{
    "verilog.formatting.veribleVerilogFormatter.arguments": "--indentation_spaces 4",
    "verilog.linting.iverilog.arguments": "-Y .sv -y gw/EconoPET/src",
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.arguments": "--sv -Igw/EconoPET/src gw/EconoPET/src/common_pkg.sv",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/fw/compile_commands.json",
    "cmake.configureEnvironment": {
        "PICO_SDK_PATH": "/opt/pico-sdk"
    },
    "cmake.buildEnvironment": {
        "PICO_SDK_PATH": "/opt/pico-sdk"
    },
    "cSpell.words": [
        "backpressure",
        "CRTC",
        "datasheet",
        "deassert",
        "deasserted",
        "deasserting",
        "deasserts",
        "demultiplexer",
        "demux",
        "Efinix",
        "GPIO",
        "leds",
        "Lehenbauer",
        "synthesizable",
        "Trion",
        "Verilog",
        "VROM"
    ],
    "cSpell.dictionaryDefinitions": [
        {
            "name": "verilog",
            "path": "./.vscode/verilog-keywords.txt"
        }
    ],
    "cSpell.dictionaries": [
        "verilog"
    ],
    "cortex-debug.variableUseNaturalFormat": false,
    "cmake.generator": "Ninja",
    
    // Ignore submodules
    "git.ignoredRepositories": [
        "fw/external/libyaml",
        "fw/external/no-OS-FatFS-SD-SPI-RPi-Pico",
        "fw/external/pico-vfs",
        "fw/external/PicoDVI",
        "gw/EconoPET/external/65xx",
        "gw/EconoPET/external/icesid",
        "gw/EconoPET/external/verilog-6502"
    ]
}